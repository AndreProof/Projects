@model GraduationWork.Models.Scene
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Jewels Placer</title>
    <link rel="stylesheet" href="css/css-loader.css">
    <link rel="stylesheet" href="css/map.css">
</head>
<body>
<script src="js/three.js"></script>
<script src="js/three.module.js"></script>
<script src="js/dat.gui.js"></script>
<script src="js/script.js"></script>

<div>
    <div id="progress" class="loader loader-default" data-text="Операция выполняется"></div>
    <div id="webgl">
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    var cw = $('#panel').height();
    $('#panel').css({ 'width': cw + 'px' });

    (function($) {
        $(document).ready(function() {
            var $panel = $('#panel');
            var $sticker = $panel.children('#panel-sticker');
            var $content = $panel.children('#panel-content');
            if ($panel.length) {
                var showPanel = function() {
                    $sticker.text('Закрыть карту размещения');
                    $content.css("visibility", "visible");
                    $panel.animate({
                        height: '40%'
                    }, 200, function() {
                        $(this).addClass('visible');
                    });
                };
                var hidePanel = function() {
                    $sticker.text('Открыть карту размещения');
                    $content.css("visibility", "hidden");
                    $panel.animate({
                        height: '25px'
                    }, 200, function() {
                        $(this).removeClass('visible');
                    });
                };
                $sticker.click(function() {
                    if ($panel.hasClass('visible')) {
                        hidePanel();
                    }
                    else {
                        showPanel();
                    }
                }).andSelf();
            }
        });
    })(jQuery);
</script>
</body>
</html>